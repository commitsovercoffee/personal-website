---
const url = "/";
import BaseLayout from "../layouts/BaseLayout.astro";
import Address from "../components/Address.astro";
import Article from "../components/Article.astro";
---

<BaseLayout url={url}>
    <Article title="Hello !">
        Welcome to my corner of the internet. This is my personal website for
        lovers, haters and everyone in between. Have a look around ! Just be
        warned, there may be some questionable humor and shameless
        self-promotion ahead.
    </Article>

    <Address
        socials={[
            { platform: "github", username: "commitsovercoffee" },
            { platform: "youtube", username: "@commitsovercoffee" },
        ]}
    >
        You can also find me on ...
    </Address>
</BaseLayout>
