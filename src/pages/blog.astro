---
const url = "blog";
import BaseLayout from "../layouts/BaseLayout.astro";
import Article from "../components/Article.astro";
const allPosts = await Astro.glob("./posts/*.md");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<BaseLayout url={url}>
    <Article title="Blogs">
        <div class="tags">
            <section class="flex">
                {
                    tags.map((tag) => (
                        <a
                            class="p-1 m-1 text-zinc-700 bg-zinc-300 hover:bg-zinc-700 hover:text-zinc-300 rounded-xl"
                            href={`/tags/${tag}`}
                        >
                            {tag}
                        </a>
                    ))
                }
            </section>
        </div>
    </Article>
</BaseLayout>
