---
const { name, desc, demo, repo } = Astro.props;
---

<div class="card p-4 flex-grow mx-2 my-4 w-60 h-60 rounded-xl bg-zinc-900 overflow-hidden">
    <h1 class="p-2 text-zinc-100">{name}</h1>
    <p class="text-left">{desc}</p>
    <section class="flex my-4">
        <a
            href={demo}
            class="hover:border-zinc-100 border border-zinc-500 duration-300 ease-in px-2 py-1 m-1 rounded-xl text-zinc-300 bg-zinc-800 cursor-pointer"
            >Demo</a
        >
        <a
            href={`https://github.com/commitsovercoffee/${repo}`}
            class="hover:border-zinc-100 border border-zinc-500 duration-300 ease-in px-2 py-1 m-1 rounded-xl text-zinc-300 bg-zinc-800 cursor-pointer"
            >Source</a
        >
    </section>
</div>
