---
const { socials } = Astro.props;
---

<!---
contact info for a person or an org.
-->
<address class="flex rounded-xl w-fit">
    <p class="text-zinc-500"><slot /></p>
    {
        socials.map((social) => (
            <a
                class="px-1 text-zinc-400 hover:text-zinc-50 transition duration-300 ease-in-out delay-100"
                href={`https://www.${social.platform}.com/${social.username}`}
            >
                {social.platform}
            </a>
        ))
    }
    <p class="text-zinc-500">.</p>
</address>
