---
const links = ["about", "blog", "tags"];
---

<div
    class="nav-bar hidden flex sm:justify-evenly flex-col sm:flex-row sm:m-4 sm:p-4 sm:flex"
>
    <!-- index -->
    <a
        class="py-2 my-2 px-4 border border-sky-400 rounded font-bold uppercase text-xl text-center hover:bg-sky-500 hover:text-slate-900"
        href="/">Home</a
    >

    <!-- others links -->
    {
        links.map((link) => (
            <a
                class="py-2 my-2 px-4 border border-sky-400 rounded font-bold uppercase text-xl text-center hover:bg-sky-500 hover:text-slate-900"
                href={link}
            >
                {link}
            </a>
        ))
    }
</div>
