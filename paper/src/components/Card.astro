---
const { img, alt, content, title } = Astro.props;
---

<div
    class="card relative w-72 h-80 m-2 rounded-xl overflow-hidden hover:border-sky-500 border-4 duration-300 ease-in"
>
    <img
        src={img}
        alt={alt}
        class="absolute top-0 bottom-0 w-full h-full duration-300 ease-in object-cover"
    />
    <div
        class="card-text overflow-scroll absolute rounded-b bottom-0 left-0 h-1/3 hover:h-full p-4 duration-300 ease-in text-center bg-zinc-900"
    >
        <p>
            <h2 class="top-1 p-2 text-sky-500">{title}</h2>
            {content}
        </p>
    </div>
</div>
