---
const { label, content } = Astro.props;
---

<div class="mx-2 border-b-2 border-gray-100">
    <button
        class="collapsible text-base duration-300 text-left w-full p-2 text-gray-100 bg-zinc-700 hover:bg-sky-500 hover:text-zinc-700"
        >{label}</button
    >
    <div class="panel bg-zinc-900 py-4 px-6 text-xs hidden">
        <p>
            {content}
        </p>
    </div>
</div>

<script>
    var acc = document.getElementsByClassName("collapsible");
    var i;

    for (i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var panel = this.nextElementSibling;
            if (panel.style.display === "block") {
                panel.style.display = "none";
            } else {
                panel.style.display = "block";
            }
        });
    }
</script>
